@model ServiceItem
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeyWord;
}

<article>
    <header>
        <h2>
            <a href="#">
                @Model.Title
            </a>
        </h2>
    </header>
    <a href="#" class="image fit"><img src="~/images/@Model.TitleImagePath" alt="" /></a>
    <div>
        @Html.Raw(Model.Text)
        
    </div>
    <ul class="actions special">
        <li><a href="" class="button">Записатися</a></li>
    </ul>
</article>